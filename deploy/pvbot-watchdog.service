[Service]
Type=oneshot
WorkingDirectory=/opt/pvbot/usdt_telegram_membership
EnvironmentFile=/opt/pvbot/usdt_telegram_membership/.env
ExecStart=/usr/bin/python3 /opt/pvbot/usdt_telegram_membership/deploy/watchdog.py
User=root

